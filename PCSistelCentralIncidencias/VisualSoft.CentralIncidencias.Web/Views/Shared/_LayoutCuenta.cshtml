                            <td>
                                <img src="~/Common/Images/LogoIcon.png" />
                            </td>
                            <td>
                                <h4 style="color: #485CA4 !important;">@System.Configuration.ConfigurationManager.AppSettings["NombreProducto1"]</h4>
                            </td>
                            <td>
                                <h4 style="color: #CE8E2E !important;">@System.Configuration.ConfigurationManager.AppSettings["NombreProducto2"]</h4>
