                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <div id="dvFoto" style="width: 90px; height: 100px; border: 0px dotted gray; margin: auto; border-radius:5px; overflow:hidden;">
                                    @if (Model.Foto.Tamano > 0)
                                    {
                                        <img src="~/Temp/@Model.Foto.Nombre"  height="100%" width="100%" />
                                    }
                                    else
                                    { 
                                        <img src="~/Common/Images/Silueta.jpg" height="100%" width="100%" />
                                    }
                                </div>
                            </li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Cerrar Sesión", "LogOut", "Login") </li>
